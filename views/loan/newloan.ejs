    <label>Amount Required</label>
    <input type="number" name="amount">
    <br>
    <label >Interest</label>
    <select name="interest">
        <option value="5">5% p/a</option>
        <option value="7.5">7.5% p/a</option>
        <option value="9">9% p/a</option>
        <option value="12.5">12.5% p/a</option>
        <option value="15">15% p/a</option>
        <option value="19">19% p/a</option>
